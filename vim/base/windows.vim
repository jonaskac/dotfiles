" WINDOWS
""""""""""""""""""""""""""""""""""""""""""""""""""""""""""""""""""""""""""

" Disable scrolling
set guioptions-=r
set guioptions-=R
set guioptions-=l
set guioptions-=L



" Moving between windows
map <C-j> <C-W>j
map <C-k> <C-W>k
map <C-h> <C-W>h
map <C-l> <C-W>l

" Split to the right
set splitright

